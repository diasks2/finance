<div class="well">
  <%= form_for @group, :html => {:class => "form-horizontal"} do |f| %>
  	<%= render 'shared/error_messages', object: f.object %>
	<fieldset>
	  	<div class="well">
	  
        	<div class="control-group">
        		<%= f.label :name, "Group Name:", :class => "control-label" %>
      			<div class="controls">
					<%= f.text_field :name %>
				</div>
		  	</div>	
		</div>  		
		<div class="center">
	  		<%= f.submit "Create New Group", :class => "btn btn-large btn-primary" %>
	  	</div>	
	</fieldset>
  <% end %>
</div>  