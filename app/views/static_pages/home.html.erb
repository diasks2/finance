<% provide(:title, 'Home') %>

<h1 class="center">Personal Finance App</h1>
<br>
<h2 class="center">Balance Sheet (¥ and $)</h2>
<table class="table">
 <thead>
    <tr>
      <th></th>
      <th>¥ Assets</th>
      <th>$ Assets</th>
      <th></th>
      <th>¥ Liabilities</th>
      <th>$ Liabilities</th>
      <th>¥ Equity</th>
      <th>$ Equity</th>
      <th>¥ Total</th>
      <th>$ Total</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><strong>Liquid</strong></td>
      <td><%= number_to_currency(0 - liquid_yen_assets, :unit => "¥", :precision => 0) %></td>
      <td><%= number_to_currency(0 - liquid_dollar_assets) %></td>
      <td><strong>Short-term</strong></td>
      <td><%= number_to_currency(st_yen_liabilities, :unit => "¥", :precision => 0) %></td>
      <td><%= number_to_currency(st_dollar_liabilities) %></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td><strong>Illiquid</strong></td>
      <td><%= number_to_currency(0 - illiquid_yen_assets, :unit => "¥", :precision => 0) %></td>
      <td><%= number_to_currency(0 - illiquid_dollar_assets) %></td>
      <td><strong>Long-term</strong></td>
      <td><%= number_to_currency(lt_yen_liabilities, :unit => "¥", :precision => 0) %></td>
      <td><%= number_to_currency(lt_dollar_liabilities) %></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td><strong>Total</strong></td>
      <td><strong><%= number_to_currency(0 - yen_assets, :unit => "¥", :precision => 0) %></strong></td>
      <td><strong><%= number_to_currency(0 - dollar_assets) %></strong></td>
      <td><strong>Total</strong></td>
      <td><strong><%= number_to_currency(yen_liabilities, :unit => "¥", :precision => 0) %></strong></td>
      <td><strong><%= number_to_currency(dollar_liabilities) %></strong></td>
      <td><strong><%= number_to_currency(0 - equity_yen, :unit => "¥", :precision => 0) %></strong></td>
      <td><strong><%= number_to_currency(0 - equity_dollar) %></strong></td>
      <td><strong><%= number_to_currency((0 - yen_assets) - ((yen_liabilities) + (0 - equity_yen)), :unit => "¥", :precision => 0) %></strong></td>
      <td><strong><%= number_to_currency((0 - dollar_assets) - ((dollar_liabilities) + (0 - equity_dollar)), :unit => "¥", :precision => 0) %></strong></td>
    </tr>
  </tbody>
</table>

<h2 class="center">Balance Sheet (Converted to ¥)</h2>
<table class="table">
 <thead>
    <tr>
      <th></th>
      <th>Converted Assets</th>
      <th></th>
      <th>Converted Liabilities</th>
      <th>Converted Equity</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><strong>Liquid</strong></td>
      <td><span class="green"><%= number_to_currency(0 - liquid_converted_assets, :unit => "¥", :precision => 0) %></span></td>
      <td><strong>Short-term</strong></td>
      <td><span class="green"><%= number_to_currency(st_converted_liabilities, :unit => "¥", :precision => 0) %></span></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td><strong>Illiquid</strong></td>
      <td><span class="green"><%= number_to_currency(0 - illiquid_converted_assets, :unit => "¥", :precision => 0) %></span></td>
      <td><strong>Long-term</strong></td>
      <td><span class="green"><%= number_to_currency(lt_converted_liabilities, :unit => "¥", :precision => 0) %></span></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td><strong>Total</strong></td>
      <td><span class="green"><strong><%= number_to_currency(0 - converted_assets, :unit => "¥", :precision => 0) %></strong></span></td>
      <td><strong>Total</strong></td>
      <td><span class="green"><strong><%= number_to_currency(converted_liabilities, :unit => "¥", :precision => 0) %></strong></span></td>
      <td><span class="green"><strong><%= number_to_currency(0 - equity_converted, :unit => "¥", :precision => 0) %></strong></span></td>
      <td><span class="green"><strong><%= number_to_currency((0 - converted_assets) - ((converted_liabilities) + (0 - equity_converted)), :unit => "¥", :precision => 0) %></strong></span></td>
    </tr>
  </tbody>
</table>

<div id="chart"></div>
<div id="chart2"></div>

<script>
var url1 = '/graph1.json';
var url2 = '/graph2.json';

var width = 960,
    height = 500,
    radius = Math.min(width, height) / 2;

var color = d3.scale.ordinal()
    .range(["#98abc5", "#8a89a6", "#7b6888", "#6b486b", "#a05d56", "#d0743c", "#ff8c00"]);

var arc = d3.svg.arc()
    .outerRadius(radius - 10)
    .innerRadius(radius - 70);

var pie = d3.layout.pie()
    .value(function(d) { return d.amount; });

var svg = d3.select("#chart").append("svg")
    .attr("width", width)
    .attr("height", height)
  .append("g")
    .attr("transform", "translate(" + width / 2 + "," + height / 2 + ")");

d3.json(url1, function(error, data) {
  console.log(data)
  data.forEach(function(d) {
    d.amount = +d.amount;
  });

  var g = svg.selectAll(".arc")
      .data(pie(data))
    .enter().append("g")
      .attr("class", "arc");

  g.append("path")
      .attr("d", arc)
      .style("fill", function(d) { return color(d.data.category.name); });

  g.append("text")
      .attr("transform", function(d) { return "translate(" + arc.centroid(d) + ")"; })
      .attr("dy", ".35em")
      .style("text-anchor", "middle")
      .text(function(d) { return d.data.category.name; });

});

var svg2 = d3.select("#chart2").append("svg")
    .attr("width", width)
    .attr("height", height)
  .append("g")
    .attr("transform", "translate(" + width / 2 + "," + height / 2 + ")");

d3.json(url2, function(error, data) {
  console.log(data)
  data.forEach(function(d) {
    d.amount = +d.amount;
  });

  var g = svg2.selectAll(".arc")
      .data(pie(data))
    .enter().append("g")
      .attr("class", "arc");

  g.append("path")
      .attr("d", arc)
      .style("fill", function(d) { return color(d.data.group_id); });

  g.append("text")
      .attr("transform", function(d) { return "translate(" + arc.centroid(d) + ")"; })
      .attr("dy", ".35em")
      .style("text-anchor", "middle")
      .text(function(d) { return d.data.group_id; });

});

</script>