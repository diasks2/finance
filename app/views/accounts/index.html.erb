<% provide(:title, 'Accounts') %>
<h1 class="center">Accounts</h1>

	<table class="table">
	 <thead>
	    <tr>
	      <th>Name</th>
	      <th>Owner</th>
	      <th>Balance</th>
	    </tr>
	  </thead>
	  <tbody>
	  	<% @accounts.each do |account| %>
		    <tr>
		      <td><%= link_to account.name, account%></td>
		      <td><%= account.owner %></td>
		      <td>$2,000</td>
		    </tr>
	    <% end %>
	  </tbody>
	</table>

<div class="center">
	<%= link_to "Create New Account", new_account_path, :class => "btn btn-primary" %>
</div>	