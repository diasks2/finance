<div class="well">
  <%= form_for @account, :html => {:class => "form-horizontal"}  do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="well">
      <fieldset>
        <div class="control-group">
        <%= f.label :name, "Account Name:", :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :name, :class => "input-xxlarge" %>
          </div>
        </div>  

        <div class="control-group">
        <%= f.label :owner, "Account Owner:", :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :owner, :class => "input-xxlarge" %>
          </div>
        </div>    

        <div class="control-group">
        <%= f.label :phone_number, "Phone Number:", :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :phone_number, :class => "input-xxlarge" %>
          </div>
        </div>  
        
        <div class="control-group">
        <%= f.label :address, "Address:", :class => "control-label" %>
          <div class="controls">
            <%= f.text_area :address, :rows => "5", :class => "input-xxlarge" %>
          </div>
        </div>    

        <div class="control-group">
        <%= f.label :url, "URL:", :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :url, :class => "input-xxlarge" %>
          </div>
        </div>    
      </fieldset>
    </div class="well">  
    <div class="center">
      <%= f.submit "Create Account", :class => "btn btn-large btn-primary" %>
    </div>  

  <% end %>
</div>  
  